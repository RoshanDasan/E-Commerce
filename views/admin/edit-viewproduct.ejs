<section class="">
  <div class="container d-flex justify-content-center">
    <div class="row w-75 mt-5">
      <div class="col-md-12">
        <h2 class="text-center">Edit Product</h2>
        <form
          action="/admin/edit_product/<%=editproduct._id %>"
          method="POST"
          enctype="multipart/form-data"
        >
          <label for="">Prodcut Name</label>
          <input
            type="text"
            name="name"
            class="form-control"
            value="<%=editproduct.Productname%>"
          />
          <label for="">Description</label>
          <input
            type="text"
            name="description"
            class="form-control"
            value="<%=editproduct.ProductDescription%>"
          />

          <label for="">Price</label>
          <input
            type="text"
            name="price"
            class="form-control"
            value="<%=editproduct.Price%>"
          />

          <label for="cars">Category</label>

          <select
            class="form-select"
            name="category"
            id="cars"
          >
          <option><%=editproduct.category%></option>
            <% procategory.forEach(function(procategory) { %>
            <% if (procategory.CategoryName == editproduct.category) { %>
          <% } else { %>
            <option><%=procategory.CategoryName%></option>

          <% } %>
          
            <% } )%>
          </select>

          <label for="">Quantity</label>
          <input
            type="text"
            name="quantity"
            class="form-control"
            value="<%=editproduct.Quantity%>"
          />

          <label for="">Give an offer for this product</label>
          <input
            type="text"
            name="offer"
            class="form-control"
            value="<%=editproduct.offerPercentage%>"
          />

          <label for="">Image 1</label>
          <br />
          <img src="/uploads/<%=editproduct?.Image[0]%>" alt="" style="width:100px;height:auto ">
          <img src="/uploads/<%=editproduct?.Image[1]%>" alt="" style="width:100px;height:auto ">
          <img src="/uploads/<%=editproduct?.Image[2]%>" alt="" style="width:100px;height:auto ">
          <img src="/uploads/<%=editproduct?.Image[3]%>" alt="" style="width:100px;height:auto ">
        
          
          <input type="file" name="image1" class="form-control" >
          <input type="file" name="image2" class="form-control" >
          <input type="file" name="image3" class="form-control" >
          <input type="file" name="image4" class="form-control" >

          <input style="display: none;" type="text" name="image1" id="" value="<%=editproduct?.Image[0]%>">
          <input style="display: none;"type="text" name="image2" id="" value="<%=editproduct?.Image[1]%>">
          <input style="display: none;"type="text" name="image3" id="" value="<%=editproduct?.Image[2]%>">
          <input style="display: none;"type="text" name="image4" id="" value="<%=editproduct?.Image[3]%>">

          

          <button type="submit" class="btn btn-success mt-4">Submit</button>
        </form>
      </div>
    </div>
  </div>
</section>

